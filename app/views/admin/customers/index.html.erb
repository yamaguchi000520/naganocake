<div class = 'container'>
 <div class = 'row'>
  <h3 class = 'mt-5 offset-1 bg-light'>会員一覧</h3>
 </div>

 <div class = 'row mt-3'>
    <div class = 'offset-sm-1 col-sm-10'>
    <table class = 'table table-hover'>
      <thead>
        <tr class = 'table-active'>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td class = 'text-left'>
              <%= link_to customer.last_name + " " + customer.first_name, admin_customer_path(customer) %>
          </td>
          <td class = 'text-left'>
              <%= customer.email %></td>
          <td>
              <% if customer.is_deleted == false %>
              <p class = 'text-success'>有効</p>
              <% else %>
              <p class = 'text-secondry'>退会済</p>
              <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
 </div>


 <div class = 'container'>
  <div class = 'row'>
   <div class = 'col-md-4 offset-md-4 py-2 mt-5'>
    <%= paginate @customers %>
   </div>
  </div>
 </div>