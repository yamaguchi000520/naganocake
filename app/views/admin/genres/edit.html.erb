<div class='container mt-4'>
  <div class='row'>
    <div class="ml-5">
  		<h2 class="bg-light my-3">ジャンル編集</h2>
  	</div>
  </div>
  
  <%= form_with model: @genre, url:admin_genre_path(@genre.id), method: :patch do |f| %>
  <div class="row mt-5">
    <div class="col-12 mb-3">
      <div class="row">
        <%= f.label :"ジャンル名", class: 'col-2' %>
          <div class="col-4">
            <%= f.text_field:name, class: 'form-control book_title' %>
          </div>
          <div class="col-2 ml-3">
            <%= f.submit '変更を保存', class:"btn btn-success" %>
          </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
