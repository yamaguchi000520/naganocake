<div class="conteiner mt-4">
  <div class="row-md">
    <h2>ジャンル一覧・追加</h2>
  </div>
  
  <div class="row-md mb-3">
    <%= form_with model: @genre, url:admin_genres_path, method: :post, local:true do |f| %>
      <div class="form-group row">
        <%= f.label :"ジャンル名", class: 'col-md-3 text-center mt-3' %>
        <%= f.text_field :name, class: 'form-control col-md-4 mt-3 genre_name' %>
        <%= f.submit '新規登録', class: 'btn btn-success md-2 offset-1' %>
      </div>
     <% end %>
</div>
  
  <div class="row offset-1">
    <div class="col-11 mt-3">
      <div class="row">
        <div class="col-5">
          <table class="table">
            <thead>
              <tr class="table-active">
                <th>ジャンル</th>
                <th colspan="3"></th>
              </tr>
            </thead>
              <tbody>
                <% @genres.each do |genre| %>
                  <tr>
                    <td><%= genre.name %></td>
                    <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
      </div>
    </div>
  </div>
