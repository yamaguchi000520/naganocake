<div class="container m-5">
  <div class="row">
    <div class="col-8 offset-4">
      <h3>商品編集</h3>
      
      <%= form_with url: admin_product_path, model: @product do |f|%>
      <p>商品画像</p><%= f.file_field :image%>
      <p>商品名</p>
      <%= f.text_field :name%>
      <p>商品説明</p>
      <%= f.text_area:explanation%>
      <p>ジャンル</p>
      <%= f.collection_select(:genre_id, @genres, :id, :name) %>
      <p>税抜価格</p>
      <p><%= f.number_field:price%>円</p>
      <!--販売中止に編集できない-->
      <span>販売ステータス
      <%= f.radio_button:is_active, true %>
      <%= f.label:is_active, '販売中', value: true %>
      
      <%= f.radio_button:is_active, false%>
      <%= f.label:is_active, '販売停止中', value: false %></span>
      
      <div><%= f.submit'変更を保存',class: 'btn btn-success' %></div>
      <%end%>
    </div>
  </div>
</div>  