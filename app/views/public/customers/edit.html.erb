<div class = 'container my-5'>
  <h2 class = 'col-3 bg-light'><strong>会員情報編集</strong></h2>

   <div class = 'row'>
    <%= form_with model: @customer, url:customers_information_path, method: :patch, local: true do |f| %>

     <div class = 'form-group row mt-4'>
       <%= f.label :氏名, class:'col-4' %>
       <%= f.text_field :last_name, class:'col-3' %>
       <%= f.text_field :first_name, class:'col-3 ml-3' %>
     </div>

     <div class = 'form-group row'>
       <%= f.label :フリガナ, class:'col-4' %>
       <%= f.text_field :last_kana, class:'col-3' %>
       <%= f.text_field :first_kana, class:'col-3 ml-3' %>
     </div>

     <div class = 'form-group row'>
       <%= f.label :郵便番号, class:'col-4' %>
       <%= f.text_field :zip, class:'col-4' %>
     </div>

     <div class = 'form-group row'>
       <%= f.label :住所, class:'col-4' %>
       <%= f.text_field :address, class:'col-8' %>
     </div>

     <div class ='form-group row'>
       <%= f.label :電話番号, class:'col-4' %>
       <%= f.text_field :phone_number,class:'col-4' %>
     </div>

     <div class = 'form-group row'>
       <%= f.label :メールアドレス, class:'col-4' %>
       <%= f.text_field :email, class:'col-8' %>
     </div>

     <div>
       <%= f.submit "編集内容を保存する", class:'btn btn-success mr-5' %>
       <%= link_to "退会する", customers_unsubscribe_path, class:'btn btn-danger ml-5' %>
     </div>
    <% end %>
    </div>
</div>