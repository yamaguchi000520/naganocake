<div class = 'container'>
  <h4 class = 'bg-light mt-4 ml-2 col-2'><strong>新規会員登録</strong></h4>
    <div class = 'row'>

      <%= form_with model: @customer, url:customer_registration_path, local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

        <div class = 'form-group row mt-4'>
          <%= f.label :名前, class:'col-3' %>
          <%= f.label :（姓）, class:'col-1' %>
          <%= f.text_field :last_name, autofocus: true, placeholder:"令和" ,autocomplete: "email", class:'col-3' %>
          <%= f.label :（名）,class:'col-1' %>
          <%= f.text_field :first_name, autofocus: true, placeholder:"道子", autocomplete: "email", class:'col-3' %>
        </div>

         <div class = 'form-group row'>
          <%= f.label :フリガナ, class:'col-2' %>
          <%= f.label :（セイ）, class:'col-2' %>
          <%= f.text_field :last_kana, autofocus: true, placeholder:"レイワ", autocomplete: "email", class:'col-3' %>
          <%= f.label :（メイ）, class:'col-2' %>
          <%= f.text_field :first_kana, autofocus: true, placeholder:"ミチコ", autocomplete: "email", class:'col-3' %>
        </div>

        <div class = 'form-group row'>
          <%= f.label :メールアドレス, class:'col-4' %>
          <%= f.email_field :email, autofocus: true, placeholder:"sample@example.com", autocomplete: "email", class:'col-5' %>
        </div>

        <div class = 'form-group row'>
          <%= f.label :郵便番号（ハイフンなし）, class:'col-4' %>
          <%= f.text_field :zip, autofocus: true, placeholder:"0000000", autocomplete: "email", class: 'col-5'%>
        </div>

         <div class = 'form-group row'>
          <%= f.label :住所, class: 'col-4'%>
          <%= f.text_field :address, autofocus: true, placeholder:"東京都渋谷区代々木神園町0-0", autocomplete: "email", class:'col-8' %>
        </div>

        <div class = 'form-group row'>
          <%= f.label :電話番号（ハイフンなし）, class:'col-4' %>
          <%= f.text_field :phone_number, autofocus: true, placeholder:"0000000000", autocomplete: "email", class: 'col-4'%>
        </div>

        <div class = 'form-group row'>
          <%= f.label :パスワード（６文字以上）, class:'col-4' %>
          <%= f.password_field :password, autocomplete: "new-password", class:'password col-4' %>
        </div>

        <div class = 'form-group row'>
          <%= f.label :パスワード（確認用）, class:'col-4' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'password_confirm col-4' %>
        </div>

        <div class = 'actions row'>
          <%= f.submit "新規登録", class:'btn btn-success col-4 mx-auto' %>
        </div>
      <% end %>


    </div>

      <h4 class = 'col-3 bg-light mt-4'><strong>既に登録済みの方</strong></h4>
        <p class = 'row offset-1 mt-3'><%= render "public/shared/links" %>からログインしてください。</p>
</div>