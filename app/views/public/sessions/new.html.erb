<div class = 'container mt-5'>
   <!--<div class = 'row'>-->
       <h4 class = 'col-2 bg-light offset-1 text-center'><strong>ログイン</strong></h4>
   <!--</div>-->
     <div class = 'row mt-4'>
        <h6 class = 'col-3 bg-light offset-2 text-center'><strong>会員の方はこちらからログイン</strong></h6>
     </div>

    <%= form_with model: @customer, url:customer_session_path, local: true do |f| %>

      <div class = 'row mt-3'>
        <%= f.label :"メールアドレス", class:'col-2 offset-2' %>
        <%= f.email_field :email, autofocus: true, placeholder:"sample@example.com", autocomplete: "email", class:'form-control col-6' %>
      </div>

      <div class = 'row mt-3 my-2'>
        <%= f.label :"パスワード", class:'col-2 offset-2' %>
        <%= f.password_field :password, autocomplete: "current-password", class:'form-control col-6' %>
      </div><br />

      <div class = 'actions offset-4'>
        <%= f.submit "ログイン", class:'btn btn-primary col-2 mb-2' %>
      </div>
    <% end %>
    </div>
         <h6 class = 'mt-5 col-2 bg-light offset-3 text-center'><strong>会員登録がお済みでない方</strong></h6>
            <p class = 'mt-3 offset-4'><%= render "public/shared/links" %>から新規登録を行ってください。</p>
</div>